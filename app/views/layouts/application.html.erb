<!DOCTYPE html>
<html>
  <head>
    <title>Naughie</title>
    <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width" />
    <%= include_gon %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/x-mathjax-config">
      MathJax.Hub.Config({
        tex2jax: {
        },
        displayAlign: "left",
        TeX: {
          equationNumbers: {
            autoNumber: "AMS",
          },
          TagSide: "left",
        },
      });
    </script>
    <%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/mathjax/2.7.2/MathJax.js?config=TeX-AMS_CHTML&locale=ja'.html_safe %>
  </head>

  <body data-controller="<%= controller_name %>" data-action="<%= action_name %>">
    <div class='header container-fluid'>
      <div class='row'>
        <div class='col-lg-12'>
          <%= render 'headers' %>
        </div>
      </div>
    </div>
    <div class='main container-fluid'>
      <%= yield %>
    </div>
    <div class='footer container-fluid'>
      <div class='row'>
        <div class='col-lg-12'>
          <%= render 'links' %>
        </div>
      </div>
    </div>
  </body>
</html>
