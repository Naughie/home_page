    <li><%= link_to 'Home', root_path %></li>
    <% if user_signed_in? %>
      <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %> /
          <%= link_to 'Withdraw', user_registration_path, method: :delete, data: dialog(:withdraw) %></li>
